<div class = "main_container" >
	<h2>スケジュール一覧</h2>

	<% if flash[:alert_success] %>
	<p class = "alert_success"><%= flash[:alert_success] %></p>
	<% end %>

	<% if flash[:alert_failure] %>
	<p class = "alert_failure"><%= flash[:alert_failure] %></p>
	<% end %>

		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>タイトル</th>
					<th>開始日</th>
					<th>終了日</th>						<th>終日</th>
					<th>スケジュール更新日</th>
					<th>確認</th>
					<th>編集</th>
					<th>削除</th>
				</tr>
			</thead>

			<tbody>
				<% @posts.each do |post|%>
					<tr>
						<td><%= post.id%></td>
						<td><%= post.title%></td>
						<td><%= post.post_start_at %></td>
						<td><%= post.post_end_at %></td>
						<td>
							<% if post.allday == true %>
								◯
							<% else post.allday == false %>

							<% end %>
						</td>
						<td><%= post.updated_at.to_s(:datetime_jp) %></td>
						<td><%= link_to "確認", post %></td>
						<td><%= link_to "編集", [:edit, post] %></td>
						<td><%= link_to "削除", post, method: :delete, data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<p><%= link_to "スケジュール新規登録", :new_post %></p>
</div>
